<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="weaselly.gtec.com.weaselly.TestActivity" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TestActivity">
        <RelativeLayout
            android:id="@+id/relStatusBox"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorBlue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI 트레이닝"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_centerInParent="true"
                android:textSize="15dp"/>

        </RelativeLayout>

        <WebView
            android:layout_below="@id/relStatusBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/wvShowMun1"
            android:layout_above="@id/btnInputAnswer"></WebView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/btnInputAnswer"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="정답 입력"
            android:textColor="#fff"
            android:background="@drawable/button_input_answer"/>




    </RelativeLayout>

</layout>